{% extends 'partials/common.twig' %}
{% block main %}
    <div class="chooseRides panel">
        <section class="availableRides">
            <h2>Chosen Rides</h2>
            {% for ride in decided %}
                <section class="ride available hidden accepted">
                    <div>
                        <h3>{{ ride.day }} {{ ride.time }}u</h3>
                        <p class="trip">{{ ride.from }}->{{ ride.to }}</p>
                        <div class="extraInfo">
                            <div class="right">
                                <p class="date">{{ ride.date }}</p>
                            </div>
                            <p>From:<br>{{ ride.fullAddressFrom }}</p>
                            <p>To:<br>{{ ride.fullAddressTo }}</p>
                            <p>Fee: €{{ ride.cost }}</p>
                        </div>
                    </div>
                    <svg width="25" height="25" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg"
                         class="expandToggle">
                        <path d="M6.25 9.375L12.5 15.625L18.75 9.375" stroke="black" stroke-width="2" stroke-linecap="round"
                              stroke-linejoin="round"/>
                    </svg>
                    <form action="" id="chooseRides">
                        <button type="button" value="accept" class="okButton" disabled>
                            <svg width="19" height="19" viewBox="0 0 19 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M15.8333 4.75L7.12496 13.4583L3.16663 9.5" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </button>
                        <button type="button" value="decline" class="nokButton">
                            <svg width="19" height="19" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" class="nokButton">
                                <path d="M10.6977 4.30237L3.72095 11.2791" stroke="white" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M3.72095 4.30237L10.6977 11.2791" stroke="white" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </button>
                    </form>
                </section>
            {% endfor %}
            <h2>Available Rides</h2>
            {% for ride in available %}
                <section class="ride available hidden">
                    <div>
                        <h3>{{ ride.day }} {{ ride.time }}u</h3>
                        <p class="trip">{{ ride.from }}->{{ ride.to }}</p>
                        <div class="extraInfo">
                            <div class="right">
                                <p class="date">{{ ride.date }}</p>
                            </div>
                            <p>From:<br>{{ ride.fullAddressFrom }}</p>
                            <p>To:<br>{{ ride.fullAddressTo }}</p>
                            <p>Fee: €{{ ride.cost }}</p>
                        </div>
                    </div>
                    <svg width="25" height="25" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg"
                         class="expandToggle">
                        <path d="M6.25 9.375L12.5 15.625L18.75 9.375" stroke="black" stroke-width="2" stroke-linecap="round"
                              stroke-linejoin="round"/>
                    </svg>
                    <form action="" id="chooseRides">
                        <button value="accept" class="okButton">
                            <svg width="19" height="19" viewBox="0 0 19 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M15.8333 4.75L7.12496 13.4583L3.16663 9.5" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </button>
                        <button value="decline" class="nokButton">
                            <svg width="19" height="19" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" class="nokButton">
                                <path d="M10.6977 4.30237L3.72095 11.2791" stroke="white" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M3.72095 4.30237L10.6977 11.2791" stroke="white" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </button>
                    </form>
                </section>
            {% endfor %}
        </section>
    </div>

{% endblock %}
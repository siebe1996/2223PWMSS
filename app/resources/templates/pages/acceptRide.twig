{% extends "partials/common.twig" %}
{% block main %}
    <div class="panel">
        <h2>Are you sure you want to accept?</h2>
        <form id="acceptRide" action="{{ url('/driver/rides/'~rideId~'/accept') }}" method="POST" enctype="application/x-www-form-urlencoded">
            <button class="okButton" type="submit" name="accept">
                <svg width="19" height="19" viewBox="0 0 19 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M15.8333 4.75L7.12496 13.4583L3.16663 9.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
            <button class="nokButton" type="submit" name="cancel">
                <svg width="19" height="19" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M10.6977 4.30237L3.72095 11.2791" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M3.72095 4.30237L10.6977 11.2791" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
        </form>
        <button class="closeHomeOverlay">
            <svg width="20" height="20" viewBox="0 0 27 27" fill="none"
                 xmlns="http://www.w3.org/2000/svg">
                <g clip-path="url(#clip0_8_70)">
                    <path d="M1.6875 25.3125L25.3125 1.6875M25.3125 25.3125L1.6875 1.6875" stroke="currentColor"
                          stroke-width="1.6875" stroke-linecap="round" stroke-linejoin="round"/>
                </g>
            </svg>
        </button>
    </div>
{% endblock %}